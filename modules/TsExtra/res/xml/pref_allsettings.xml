<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
            android:title="@string/pref_header_general"
            android:key="pref_header_general_settings">

		<Preference android:key="teamsuperluminal" 
			style="?android:preferenceInformationStyle"
			android:title="Team Superluminal version"
			android:summary="No version info found"/>

		<Preference
			android:key="donate"
			android:title="@string/pref_title_donate"
			android:summary="@string/pref_summary_donate"
			android:defaultValue="false" />

		<Preference
			android:key="donate2"
			android:title="@string/pref_title_donate2"
			android:summary="@string/pref_summary_donate2"
			android:defaultValue="false" />

    </PreferenceCategory>

    <PreferenceCategory
            android:title="@string/pref_header_root"
            android:key="pref_header_root_settings">
	
		<Preference
			android:key="install_su"
			android:title="@string/pref_title_install_root"
			android:summary="@string/pref_title_install_root"
			android:defaultValue="false" />

		<Preference
			android:key="uninstall_su"
			android:title="@string/pref_title_uninstall_root"
			android:summary="@string/pref_title_uninstall_root"
			android:defaultValue="false" />

	</PreferenceCategory>

    <PreferenceCategory
            android:title="@string/pref_header_extra"
            android:key="pref_header_extra_settings">

	<ListPreference
		android:key="powerprofile"
		android:title="@string/pref_title_powerprofile"
		android:summary="@string/pref_summary_powerprofile"
		android:entries="@array/powerprofile_entries"
		android:entryValues="@array/powerprofile_values"
		android:defaultValue="1" />

         <Preference
			android:key="install_vulkan"
			android:title="@string/pref_title_install_vulkan"
			android:summary="@string/pref_summary_install_vulkan"
			android:defaultValue="false" />

		<CheckBoxPreference
			android:key="capt_en_b"
			android:title="@string/pref_title_enable_capt"
			android:summary="@string/pref_summary_enable_capt"
			android:defaultValue="true" />

	</PreferenceCategory>

</PreferenceScreen>
